<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#ffcd2626"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_city_manager"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:src="@drawable/title_city" />

        <ImageView
            android:id="@+id/title_city_seperator"
            android:layout_width="1.0dip"
            android:layout_height="45.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_toRightOf="@id/title_city_manager"
            android:background="#A71717" />

        <TextView
            android:id="@+id/title_city_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/title_city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:text="北京天气"
            android:textColor="#ffffffff"
            android:textSize="22.0sp" />

        <ImageView
            android:id="@+id/title_update_btn"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@drawable/title_update" />

        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_update_btn"
            android:src="@drawable/title_share" />

        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/base_action_bar_action_city" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info"
        android:layout_below="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg">

        <TextView
            android:id="@+id/info_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:layout_marginLeft="30.0dip"
            android:text="北京"
            android:textColor="#ffffffff"
            android:textSize="50.0sp"
            />

        <TextView
            android:id="@+id/info_pub_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_city"
            android:layout_marginLeft="30.0dip"
            android:layout_marginTop="10.0dip"
            android:text="今天13:25发布"
            android:textColor="#ffffffff"
            android:textSize="20.0sp"
            />

        <TextView
            android:id="@+id/info_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_pub_time"
            android:layout_marginLeft="30.0dip"
            android:text="湿度:57%"
            android:textColor="#ffffffff"
            android:textSize="20.0sp"
            />

        <ImageView
            android:id="@+id/info_head"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@drawable/biz_plugin_weather_0_50"
            />

        <TextView
            android:id="@+id/info_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:layout_toLeftOf="@+id/info_head"
            android:layout_marginRight="10.0dip"
            android:text="PM2.5"
            android:textColor="#ffffffff"
            android:textSize="20.0sp"
            />

        <TextView
            android:id="@+id/info_pm_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/info_head"
            android:layout_below="@+id/info_pm"
            android:text="100"
            android:textColor="#ffffffff"
            android:textSize="40.0sp"
            />

        <TextView
            android:id="@+id/info_pm_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/info_head"
            android:layout_below="@+id/info_head"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="-50.0dip"
            android:text="重度污染"
            android:textColor="#ffffffff"
            android:textSize="30.0sp"
            />

        <ImageView
            android:id="@+id/info_weather"
            android:layout_width="170.0dip"
            android:layout_height="170.0dip"
            android:layout_below="@+id/info_pm_level"
            android:layout_marginTop="20.0dip"
            android:src="@drawable/biz_plugin_weather_qing"
            />

        <TextView
            android:id="@+id/info_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_pm_level"
            android:layout_toRightOf="@+id/info_city"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="30.0dip"
            android:text="今天 星期三"
            android:textColor="#ffffffff"
            android:textSize="30.0sp"
            />

        <TextView
            android:id="@+id/info_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_week"
            android:layout_toRightOf="@+id/info_city"
            android:layout_marginLeft="20.0dip"
            android:text=" C7 ~ C2-"
            android:textColor="#ffffffff"
            android:textSize="40.0sp"
            />

        <TextView
            android:id="@+id/info_cloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_temperature"
            android:layout_toRightOf="@+id/info_city"
            android:layout_marginLeft="20.0dip"
            android:text="多云转晴"
            android:textColor="#ffffffff"
            android:textSize="30.0sp"
            />

        <TextView
            android:id="@+id/info_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_cloud"
            android:layout_toRightOf="@+id/info_city"
            android:layout_marginLeft="20.0dip"
            android:text="微风"
            android:textColor="#ffffffff"
            android:textSize="30.0sp"
            />
    </RelativeLayout>
</RelativeLayout>
